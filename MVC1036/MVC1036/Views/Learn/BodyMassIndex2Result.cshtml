@model MVC1036.Models.Person
    <link href="~/css/BMI.css" rel="stylesheet" />
<p><label>Name:</label> @Model.Name</p>
<p><label>Gender:</label> @Model.Gender</p>
<p><label>Weight:</label> @Model.Weight.ToString("n1")</p>
<p><label>Height:</label> @Model.Height.ToString("n2")</p>
<p><label>Do you smoke? </label> @Model.Smoking</p>
<p><label>Vaccination status:</label> @Model.Vaccinated</p>
<p><label>BMI:</label> @Model.Bmi.ToString("n1")</p>
<p><label>BMI Class:</label> @Model.BmiClass</p>