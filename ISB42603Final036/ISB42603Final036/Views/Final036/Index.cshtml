@model IEnumerable<ISB42603Final036.Models.HousingLoan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Principal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfYears)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.MonthlyPayment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Principal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfYears)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.MonthlyPayment)
            </td>
            
        </tr>
}
    </tbody>
</table>

<p>Highest principal amount: @ViewBag.HighestPrincipal.ToString("n")</p>
<p>Lowest principal amount: @ViewBag.LowestPrincipal.ToString("n")</p>
<p>Average monthly payment (Female): @ViewBag.AveragePaymentFemale.ToString("n")</p>
<p>Average monthly payment (Male): @ViewBag.AveragePaymentMale.ToString("n")</p>
