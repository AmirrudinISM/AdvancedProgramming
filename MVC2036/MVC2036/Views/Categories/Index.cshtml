@model IEnumerable<MVC2036.Models.Category>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CatTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatDesc)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CatId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CatId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CatId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


